@page
@model OpenHouseQuestions.Pages.IndexModel
@{
    ViewData["Title"] = "הנדסת תוכנה כצנלסון";
    Layout = null; // אנחנו בונים עיצוב עצמאי מלא לדף הזה
}

<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>הנדסת תוכנה כצנלסון - שאלות LIVE</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <style>
        body {
            font-family: 'Rubik', sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        /* עיצוב כותרת ראשית */
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 20px;
            text-align: center;
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            box-shadow: 0 10px 30px rgba(118, 75, 162, 0.3);
            margin-bottom: 40px;
        }

        .hero-title {
            font-weight: 700;
            font-size: 3.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .hero-subtitle {
            font-weight: 300;
            font-size: 1.5rem;
            opacity: 0.9;
        }

        /* עיצוב תיבת הקלט */
        .input-card {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            margin-top: -50px; /* עולה קצת על הכותרת */
            margin-bottom: 40px;
            border: 1px solid #e1e1e1;
        }

        .form-control-lg {
            border-radius: 50px;
            padding: 15px 25px;
            border: 2px solid #eef0f3;
            background-color: #f8f9fa;
            font-size: 1.1rem;
        }

        .form-control-lg:focus {
            border-color: #764ba2;
            box-shadow: 0 0 0 0.25rem rgba(118, 75, 162, 0.25);
            background-color: white;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 50px;
            padding: 10px 30px;
            font-weight: 500;
            border: none;
            transition: transform 0.2s;
        }

        .btn-gradient:hover {
            transform: scale(1.05);
            color: white;
        }

        /* עיצוב רשימת השאלות */
        .question-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            border-right: 5px solid #764ba2; /* פס צבע בצד ימין */
            transition: transform 0.2s;
            animation: fadeIn 0.5s ease-in;
        }

        .question-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

        .question-text {
            font-size: 1.25rem;
            font-weight: 500;
            margin-bottom: 5px;
            color: #2d3436;
        }

        .question-time {
            font-size: 0.85rem;
            color: #b2bec3;
        }

        .section-title {
            color: #764ba2;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
            position: relative;
        }

        /* אנימציה להופעת שאלות */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* התאמה למסכים קטנים */
        @@media (max-width: 768px) {
            .hero-title { font-size: 2.5rem; }
            .input-card { margin-top: -30px; padding: 20px; }
        }
    </style>
</head>
<body>

    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">הנדסת תוכנה כצנלסון</h1>
            <p class="hero-subtitle">ערב מגמה | שאלות ותשובות בלייב</p>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="input-card">
                    <form method="post">
                        <div class="input-group">
                            <input type="text" asp-for="NewQuestionContent" class="form-control form-control-lg" placeholder="כתבו כאן את השאלה שלכם..." required autocomplete="off" />
                            <button type="submit" class="btn btn-gradient ms-2">שלח</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <h3 class="section-title">שאלות מהקהל</h3>

                <div id="questionsContainer">
                    @if (Model.QuestionsList != null && Model.QuestionsList.Count > 0)
                    {
                        @foreach (var q in Model.QuestionsList)
                        {
                            <div class="question-card">
                                <div class="question-text">@q.Content</div>
                                <div class="question-time">נשלח ב- @q.SubmittedAt.ToString("HH:mm")</div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted mt-4">
                            <p style="font-size: 1.2rem;">עדיין אין שאלות. תהיו הראשונים לשאול!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script>
        setInterval(function() {
            fetch(window.location.href)
                .then(response => response.text())
                .then(html => {
                    var parser = new DOMParser();
                    var doc = parser.parseFromString(html, "text/html");
                    var newContent = doc.getElementById("questionsContainer").innerHTML;

                    // בדיקה האם התוכן השתנה כדי למנוע הבהובים מיותרים
                    if(document.getElementById("questionsContainer").innerHTML.length !== newContent.length) {
                         document.getElementById("questionsContainer").innerHTML = newContent;
                    }
                })
                .catch(err => console.error('Failed to refresh questions', err));
        }, 3000);
    </script>

    <!--//clear-->
    <form method="post" onsubmit="return askCode(this);" style="display:inline;">
        <input type="hidden" name="code" id="clearCode" />
        <button type="submit"
                asp-page-handler="Clear"
                class="btn btn-light"
                title="רענון ערב"
                style="border-radius:50%; width:45px; height:45px;">
            🔄
        </button>
    </form>

    <script>
        function askCode(form) {
            const code = prompt("הכניסי קוד מנהל:");
            if (!code) return false;
            document.getElementById("clearCode").value = code;
            return true;
        }
    </script>



</body>
</html>